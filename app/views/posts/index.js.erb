$('#posts').append("<%= j render(partial: 'delimeter') %>")
$('#posts').append("<%= j render(@posts) %>")

<% if @posts.next_page %>
  $('.pagination').replaceWith("<%= j will_paginate(@posts, renderer: 'BootstrapPaginationHelper::LinkRenderer') %>");
<% else %>
  $('.pagination').text('Загрузка статей...').remove
  $('.pagination').remove
<% end %>